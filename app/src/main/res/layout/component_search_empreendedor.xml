<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corners_white_background"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imageEmpreendimento"
        android:layout_width="155dp"
        android:layout_height="81dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="76dp"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomeEmprendimento"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_margin="0dp"
            android:fontFamily="@font/baloo"
            android:text="NomeEmprendimento"
            android:textColor="#8A00DE"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nicho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:fontFamily="@font/baloo"
            android:text="nicho
"
            android:textColor="#FF7D1E"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/descircaoEmprendimento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/baloo"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="descircao emprendimento fdfgsdhjfgjsdsadasdasdas"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>