<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:circularflow_defaultRadius="20dp">

    <!-- Adiciona o ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonParceiro"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#B741FF"
                    android:text="Parceiro"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonUsuario"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Usuário"
                    android:textColor="#B741FF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Cadastro"
                    android:textAlignment="center"
                    android:textColor="#FF7D1E"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nomeCompletoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="Nome Completo:"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/nomeCompletoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Digite seu nome..."
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dataNascimentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="Data de Nascimento:"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/dataNascimentoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="XX/MM/YYYY"
                    android:inputType="date"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/meiTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="MEI:"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/meiEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Digite seu mei..."
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpfTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="CPF:"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/cpfEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Digite seu cpf..."
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewCpfError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:visibility="gone"
                    android:text="CPF inválido" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="Senha:"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/senhaEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Digite uma senha..."
                    android:inputType="textPassword"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="Confirme sua senha:"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/confirmarSenhaEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Confirme sua senha..."
                    android:inputType="textPassword"
                    android:textColor="#5C5C5C"
                    android:textSize="16sp" />

                <!-- Faixa laranja abaixo do campo "Confirme sua senha" -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="#FF7D1E" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="*Insira o endereço do seu estabelecimento, caso não tenha um estabelecimento comercial complete as informações com seu endereço privado" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UF"
                        android:textColor="#CC78FF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/ufEditText"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:hint="UF"
                        android:inputType="text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="Cidade"
                        android:textColor="#CC78FF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/cidadeEditText"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:hint="Cidade"
                        android:inputType="text"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bairro"
                        android:textColor="#CC78FF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/bairroEditText"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:hint="Bairro"
                        android:inputType="text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Nº"
                        android:textColor="#CC78FF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/numeroEditText"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:hint="S/N"
                        android:inputType="text"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="Logradouro"
                        android:textColor="#CC78FF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/logradouroEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:hint="Logradouro"
                        android:inputType="text"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Faixa laranja abaixo do campo "Logradouro" -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="#FF7D1E" />
                <!-- Adiciona o campo de seleção (Spinner) -->
                <TextView
                    android:id="@+id/textViewNicho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="Qual seu nicho de trabalho?"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerNicho"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext" />
                <!-- Adiciona as opções de modalidade de serviço -->
                <TextView
                    android:id="@+id/textViewModalidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="Qual modalidade de serviço?"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/radioGroupModalidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonPresencial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Presencial" />

                    <RadioButton
                        android:id="@+id/radioButtonOnline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Online" />

                    <RadioButton
                        android:id="@+id/radioButtonAmbos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Híbrido" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Nome do empreendimento"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/nomeEmpreendimentoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Digite o nome do seu empreendimento"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="SIte do seu negócio"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/siteEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Digite o seu site"
                    android:inputType="text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="Plano escolhido"
                        android:textColor="#CC78FF"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinnerPlano"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/rounded_edittext" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Formas de contato"
                    android:textAlignment="viewStart"
                    android:textColor="#FF7D1E"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Número de telefone"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/numeroTelefoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Digite o número do seu telefone"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Email"
                    android:textColor="#CC78FF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Digite seu email"
                    android:inputType="text"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/insta" />

                    <EditText
                        android:id="@+id/instagramEditText"
                        android:layout_width="280dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Digite seu instagram"
                        android:textColor="#AAA8A8"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/facebook" />

                    <EditText
                        android:id="@+id/facebookEditText"
                        android:layout_width="280dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Digite o seu facebook"
                        android:textColor="#AAA8A8"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/VoltarMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:backgroundTint="#CC78FF"
            android:text="Já possuo cadastro" />

        <Button
            android:id="@+id/buttonCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:backgroundTint="#FF7D1E"
            android:text="Cadastrar" />
    </LinearLayout>

</LinearLayout>
