<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logoHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_responsivo" />

            <EditText
                android:id="@+id/barraPesquisa"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:backgroundTint="#8A00DE"
                android:ems="10"
                android:inputType="text"
                android:text="Digite aqui..."
                android:textColor="#919191"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/pesquisaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                app:srcCompat="@drawable/icon_pesquisa" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/nichosAgrupados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/gastronomiaNicho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Gastronomia" />

                <TextView
                    android:id="@+id/modaNicho"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Moda" />

                <TextView
                    android:id="@+id/artesanatoNicho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Artesanato" />

                <TextView
                    android:id="@+id/tecnologiaNicho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Tecnologia" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/saudeNicho"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Saúde" />

                <TextView
                    android:id="@+id/educacaoNicho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Educação" />

                <TextView
                    android:id="@+id/esteticaNicho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Estética" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/infoEmpreendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="208dp"
                android:layout_height="98dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/perfil_vitrine" />

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content"
                    android:text="Nome Empreendimento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="287dp"
                    android:layout_height="wrap_content"
                    android:text="Loremsp ipsum dolor sit amet, consectetur adipiscing elit. Etiam pharetra diam ex, ut vehicula odio interdum quis. Suspendisse tincidunt ex in malesuada laoreet. Aliquam dolor lacus, tincidunt eu pretium a, commodo et turpis. Duis mattis scelerisque ante id lacinia. Cras vitae purus dolor. "
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>